   <!--Survey-->
   <div class="container mb-3">
      <div class="row">
         <div class="col-lg-12">
            <h1 class="text-center mt-5">Questionnaire</h1>
            <div class="card border-0">
               <!--Housing-->
               <div class="card-header">Housing</div>
               <div class="card-body">
                  <form>
                     <div class="form-group ml-2 mr-2 mt-2">
                        <div class="form-group">
                           <div class="form-row">
                              <div class="col-lg-12">
                                 <label for="q1">1. What housing type are you looking for?</label>
                                 <select class="form-control chosen-select" id="q1">
                                    <option value="0"></option>
                                    <option value="37">Apartment or Condo for Rent</option>
                                    <option value="43">House for Rent</option>
                                    <option value="35">House for Sale</option>
                                 </select>
                              </div>
                           </div>
                        </div>
                     </div>
                  </form>
               </div>
               <!--Social Amenities-->
               <div class="card-header">Social Amenities</div>
               <div class="card-body">
                  <form>
                     <div class="form-group ml-2 mr-2 mt-2">
                        <div class="form-group">
                           <div class="form-row">
                              <div class="col-lg-12">
                                 <label for="q2">2. Please choose your social amenities?</label>
                                 <select data-placeholder="Choose social amenities ..." name="social" multiple class="chosen-select" id="q2">
                                    <option value="0"></option>
                                    <option value="Bars">Bars</option>
                                    <option value="Coffee Shops">Coffee Shops</option>
                                    <option value="Cinema">Cinema</option>
                                    <option value="Restaurants">Restaurants</option>
                                 </select>
                              </div>
                           </div>
                        </div>
                     </div>
                  </form>
               </div>
            </div>
            <!--Outdoor Amenities-->
            <div class="card-header">Recreational Amenities</div>
            <div class="card-body">
               <form>
                  <div class="form-group ml-2 mr-2 mt-2">
                     <div class="form-group">
                        <div class="form-row">
                           <div class="col-lg-12">
                              <label for="q3">3. Please choose your outdoor amenities?</label>
                              <select data-placeholder="Choose outdoor amenities ..." name="outdoor[]" multiple class="chosen-select" id="q3">
                                 <option value="0"></option>
                                 <option value="Parks">Parks</option>
                                 <option value="Rink">Rink/Arenas</option>
                                 <option value="Community Center">Community Centre</option>
                                 <option value="Beach">Beach</option>
                              </select>
                           </div>
                        </div>
                     </div>
                  </div>
               </form>
            </div>
            <!--Other Amenities-->
            <div class="card-header">Health Amenities</div>
            <div class="card-body">
               <form>
                  <div class="form-group ml-2 mr-2 mt-2">
                     <div class="form-group">
                        <div class="form-row">
                           <div class="col-lg-12">
                              <label for="q4">4. Please choose health amenities?</label>
                              <select data-placeholder="Choose other amenities ..." name="other[]" multiple class="chosen-select" id="q4">
                                 <option value="0"></option>
                                 <option value="Doctor">Doctors</option>
                                 <option value="Dentist">Dentist</option>
                                 <option value="Veterinarian">Veterinarian</option>
                                 <option value="Gym">Gym</option>
                              </select>
                           </div>
                        </div>
                     </div>
                  </div>
               </form>
            </div>
            <!--Location-->
            <div class="card-header">Location Centre</div>
            <div class="card-body">
               <form>
                  <div class="form-group ml-2 mr-2 mt-2">
                     <div class="form-group">
                        <div class="form-row">
                           <div class="col-lg-12">
                              <label for="q5">5. Where do you want to base your search? (City, Address)</label>
                              <input type="text" class="form-control location" placeholder="ie: Toronto" id="q5">
                           </div>
                        </div>
                     </div>
                       <button type="submit" class="btn btn-primary submit" id="submitBtn">Submit</button>
                  </div>
               </form>
            </div>
         </div>
      </div>
